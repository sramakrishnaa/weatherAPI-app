<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tags for character set and viewport -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Title of the page -->
    <title>WeatherAPI</title>

    <!-- Bootstrap styles and scripts from CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">

    <!-- Custom styles for the page -->
    <style>
        h1 {
            margin: 2rem 0rem;
        }

        .list-group-item {
            border: 0;
        }

        .form-control {
            box-shadow: 0px 0px 4px rgb(160, 160, 160);
        }

        a {
            text-decoration: none;
            color: black;
        }
    </style>
</head>

<body>
    <div class="container text-center pt-5" style="height: 100vh;">


        <h1 class="font-monospace fw-semibold "><a href="/">Weather App API</a></h1>


        <form action="/submit" method="post">
            <div class="d-flex justify-content-center text-center align-items-center mb-5">
                <div class="p-2">

                    <span class="fw-semibold font-monospace">Enter Cities</span>
                </div>
                <div class="p-2">

                    <input class="form-control" type="text" name="cities" id="cities" placeholder="Comma-separated"
                        required autocomplete="off">
                </div>
                <div class="p-2">

                    <button class="btn btn-primary" style="background-color: orange; border: 0;" type="submit">Get
                        Weather</button>
                </div>
            </div>
        </form>


        <% if (weather.error) { %>
            <h6 class="font-monospace text-danger">
                <%= weather.error %>
            </h6>
            <%}else if(weather.error){%>
                <p>
                    <%=weather.error%>
                </p>
                <% } else { %>

                    <table class="table d-inline justify-content-center align-items-center text-start table-bordered">
                        <thead class="table-secondary">
                            <tr>
                                <th>#</th>
                                <th>City</th>
                                <th>Temperature</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Loop through weather data and display it in table rows -->
                            <% Object.entries(weather).forEach(([city, temperature], index)=> { %>
                                <tr>
                                    <th>
                                        <%= index + 1 %>
                                    </th>
                                    <td>
                                        <%= city %>
                                    </td>
                                    <td>
                                        <%= temperature %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } %>

    </div>

</body>

</html>